<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/bootstrap')%>
    <link rel="stylesheet" href="/styles.css" />
    <title>Birding</title>
  </head>
  <body>
    <%- include('partials/nav') %>
    <main class="container-fluid">
      <h2 class="text-center mt-4">List of notes below</h2>
      <table class="table table-hover table-bordered mt-4">
        <thead>
          <tr>
            <th>No.</th>
            <th>Date</th>
            <th>Time</th>
            <th>Day</th>
            <th>Behavior</th>
          </tr>
        </thead>
        <tbody>
          <% for( let i = 0; i < data.length; i++ ) { %>
          <tr>
            <td>Sighting <%= i + 1%></td>
            <td><%= data[i].date.toISOString().slice(0,10)%></td>
            <td><%= data[i].time %></td>
            <td><%= data[i].day %></td>
            <td><%= data[i].behavior %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </main>
  </body>
</html>
